    "configurations": [
        {
            "name": "Launch Auth Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/server",
            "cwd": "${workspaceFolder}",
            "showLog": false
        },
        {
            "name": "Launch Auth Manager",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/manager",
            "args": ["create-user", "--", "pepito", "patata"],
            "cwd": "${workspaceFolder}",
            "showLog": false
        }
    ]
}